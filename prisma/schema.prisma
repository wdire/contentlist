datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

model List {
  id             Int     @id @default(autoincrement())
  name           String
  user           User    @relation(fields: [userId], references: [id])
  userId         String
  image_url      String  @default("")
  listOnHomepage Boolean @default(true)

  // TODO: Add "edited" boolean field. Don't allow users to create new list if they already have not edited one
  // and show toast to redirect to existing one

  /// [ListData]
  contentsData Json
}

model User {
  id       String @id @default(cuid())
  username String
  email    String
  List     List[]
}
